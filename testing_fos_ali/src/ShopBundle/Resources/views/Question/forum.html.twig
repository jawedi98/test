{% extends 'admin.html.twig' %}

{% block username %} Administrator {% endblock %}
{% block strong %} {%  endblock %}

    {% block h2 %} {% endblock %}

    {% block path %} {{ path('forum') }} {% endblock %}

{% block body %}



    <div class="row clearfix">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="header">
                    <h2>Liste des<strong> Forum</strong> questions
                    <ul class="header-dropdown">
                        <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                            <ul class="dropdown-menu dropdown-menu-right slideUp">
                                <li><a href="{{ path('forum_new') }}">ajouter une questions</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <div class="body table-responsive members_profiles">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <!--th style="width:60px;">Soc Logo</th-->
                            <th>question ID</th>
                            <th>titre</th>
                            <th>contenu</th>
                            <th>utilisateur</th>
                            <th>categorie</th>
                            <th>Action</th>

                        </tr>
                        </thead>

                        <tbody>
                        {% for q in questions %}
                            <tr>

                                <td>{{ q.id }}</td>

                                <td>{{ q.titre }}</td>

                                <td>{{ q.contenu }}</td>
                                <td>{{ q.utilisateur }}</td>
                                <td>{{ q.categorie.nom }}</td>
                                <td>
                                    <ul style="list-style:none">
                                        <br>
                                        <li>
                                            <button><a href="{{ path('forum_delete', { 'id': q.id }) }}">Delete</a></button>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {{ knp_pagination_render(questions) }}

{% endblock %}
