{% extends 'admin.html.twig' %}


{% block strong %}Promotion {%  endblock %}

    {% block h2 %} Information{% endblock %}

    {% block path %} {{ path('Promotion_Affiche') }} {% endblock %}

{% block body %}




    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="block-header">
                </div>
                <div class="body">

                    {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}


                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                            <label for="password_2">valeur</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8">
                            <div class="form-group">
                                {{ form_widget(form.valeur,{'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                            <label for="email_address_2">Debut contrat</label>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                                {{ form_widget(form.dateDebut,{'attr': {'class': 'form-control','placeholder':'Ex: 2016-01-30'}}) }}

                            </div>
                        </div>

                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                            <label for="email_address_2">date debut</label>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i> </span>
                                {{ form_widget(form.dateFin,{'attr': {'class': 'form-control','placeholder':'Ex: 2016-01-30'}}) }}

                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                            <label for="password_2">produit</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8">
                            <div class="form-group">
                                {{ form_widget(form.idp,{'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">

                        <div class="col-sm-8 offset-sm-2">
                            <input type="submit" class="btn btn-raised btn-primary btn-round waves-effect" value="Add">
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
