{% extends 'base.html.twig' %}

{% block body %}

    <div class="main-ws-sec">
        <div class="post-topbar">
            <div class="user-picy">
                <img src="images/resources/user-pic.png" alt="">
            </div>
            <div class="post-st">
                <ul>
                    <li><a class="post_project" href="#" title="">Passer une livraison</a></li>

                </ul>
            </div><!--post-st end-->
        </div>
    </div>

    <div class="post-popup pst-pj">
        <div class="post-project">
            <h3>Post a project</h3>
            <div class="post-project-fields">
                <div>
                    <div class="row">
                        {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}
                        <div class="col-lg-12">

                            {{ form_widget(form.namev,{'attr': {'class': 'form-control','placeholder':'Your name'}}) }}
                        </div>
                        <div class="col-lg-12">

                            {{ form_widget(form.street,{'attr': {'class': 'form-control','placeholder':'Street...'}}) }}

                        </div>
                        <div class="col-lg-12">

                            {{ form_widget(form.cite,{'attr': {'class': 'form-control','placeholder':'City...'}}) }}

                        </div>
                        <div class="col-lg-12">

                            {{ form_widget(form.ville,{'attr': {'class': 'form-control','placeholder':'Ville...'}}) }}

                        </div>
                        <div class="col-lg-12">

                            {{ form_widget(form.codep,{'attr': {'class': 'form-control','placeholder':'Code Postal'}}) }}

                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(form.tel,{'attr': {'class': 'form-control','placeholder':'Votre numero de téléphone'}}) }}
                        </div>


                        <div class="col-lg-12">
                            {{ form_widget(form.emailv,{'attr': {'class': 'form-control date','placeholder':'Email'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(form.modelivrraison,{'attr': {'class': 'form-control date','placeholder':'modelivraison'}}) }}
                        </div>
                        <div class="col-lg-12">

                            <input type="submit" class="btn btn-raised btn-primary btn-round waves-effect" value="Add">
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div><!--post-project-fields end-->
        </div><!--post-project end-->
    </div>
{% endblock %}
