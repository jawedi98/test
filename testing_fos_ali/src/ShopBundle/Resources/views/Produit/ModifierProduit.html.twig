{% extends 'admin.html.twig' %}

{% block username %} ADMIN {% endblock %}
{% block strong %}produit {%  endblock %}

    {% block h2 %} Information{% endblock %}

    {% block path %} {{ path('Produit_Affiche') }} {% endblock %}

{% block body %}

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="block-header">
                </div>
                <div class="body">

                    {{ form_start(form) }}



                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                            <label for="email_address_2">produit</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8">
                            <div class="form-group">
                                {{ form_widget(form.file,{'attr': {'class': 'contact-fields-w3ls'}}) }}
                            </div>
                        </div>
                        {% if((form_errors(form.file)==true)) %}
                            <div class="alert alert-primary" role="alert">
                                The logo is mandatory!
                            </div>
                        {% endif %}
                    </div>


                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 ">
                        <label for="email_address_2">name produit</label>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon"> </span>
                            {{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}

                        </div>
                    </div>
                    {% if((form_errors(form.nom)==true)) %}
                        <div class="alert alert-primary" role="alert">
                            Missing info!
                        </div>  {% endif %}
                </div>


        <div class="row clearfix">
            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                <label for="password_2">description</label>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8">
                <div class="form-group">
                    {{ form_widget(form.description,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            {% if((form_errors(form.description)==true)) %}
                <div class="alert alert-primary" role="alert">
                    Type your new description!
                </div>  {% endif %}
        </div>

    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
            <label for="password_2">prix</label>
        </div>
        <div class="col-lg-10 col-md-10 col-sm-8">
            <div class="form-group">
                {{ form_widget(form.prix,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {% if((form_errors(form.prix)==true)) %}
            <div class="alert alert-primary" role="alert">
                Type your new prix!
            </div>  {% endif %}
    </div>
    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
            <label for="password_2">quantite</label>
        </div>
        <div class="col-lg-10 col-md-10 col-sm-8">
            <div class="form-group">
                {{ form_widget(form.quantite,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {% if((form_errors(form.quantite)==true)) %}
            <div class="alert alert-primary" role="alert">
                Type your new quantite!
            </div>  {% endif %}
    </div>
    <div class="row clearfix">
        <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
            <label for="password_2">categorie</label>
        </div>
        <div class="col-lg-10 col-md-10 col-sm-8">

            {{ form_widget(form.id) }}

        </div>
    </div>
    <div class="row clearfix">

        <div class="col-sm-8 offset-sm-2">
            <input type="submit" class="btn btn-raised btn-primary btn-round waves-effect" value="Save">
        </div>
    </div>


    {{ form_end(form) }}
    </div>
    </div>
    </div>
    </div>



{% endblock %}
